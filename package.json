{
  "name": "safira-back",
  "version": "0.0.1",
  "description": "NestJS API backend for the Safira platform - handles authentication, data management, and business logic.",
  "author": {
    "name": "Alex",
    "email": "alexhcj@yandex.ru",
    "url": "https://t.me/alex_hcj"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexhcj/safira-back.git"
  },
  "keywords": [
    "e-commerce",
    "react",
    "vite",
    "food-store",
    "safira"
  ],
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "start:dev-prod": "cross-env NODE_ENV=development node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@getbrevo/brevo": "^2.2.0",
    "@nestjs/bullmq": "^10.2.3",
    "@nestjs/common": "10.2.7",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.2.7",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/mapped-types": "2.0.2",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "10.0.2",
    "@nestjs/platform-express": "10.2.7",
    "@nestjs/schedule": "^5.0.1",
    "@types/bcrypt": "5.0.0",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "cross-env": "^7.0.3",
    "handlebars": "^4.7.8",
    "mongoose": "^7.8.6",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1",
    "slug": "8.2.3",
    "ua-parser-js": "^2.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.18",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.7",
    "@types/express": "4.17.19",
    "@types/jest": "29.5.5",
    "@types/multer": "^1.4.12",
    "@types/node": "20.8.4",
    "@types/passport-jwt": "3.0.10",
    "@types/passport-local": "1.0.36",
    "@types/supertest": "2.0.14",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "bullmq": "^5.44.4",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "29.7.0",
    "joi": "^17.13.3",
    "prettier": "3.0.3",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
